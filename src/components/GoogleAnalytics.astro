const trackingId = "G-Z3R6NF5FQX"; // reemplaza con tu ID real

---

<!-- Google tag (gtag.js) -->
<script  is:inline type="text/partytown" async src={`https://www.googletagmanager.com/gtag/js?id=${trackingId}`}></script>
<script is:inline type="text/partytown">
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  // This should ALWAYS be set before the gtag("config", {trackingId}); line
  gtag("consent", "default", {
      ad_storage: "denied",
      ad_user_data: "denied",
      ad_personalization: "denied",
      analytics_storage: "denied",
  });
  gtag('config', '{trackingId}');
  
</script>